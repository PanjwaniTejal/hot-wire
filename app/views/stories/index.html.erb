<%= turbo_frame_tag "create_story_form" do %>
  <%= link_to 'Create new story', new_story_path, class: 'btn btn-dark' %>
<% end %>

<div class='mt-4' data-controller='search'>
  <%= text_field_tag :query,'', placeholder: 'Search by title', data: {action: 'input->search#search', target: 'search.params'}%>
</div>

<h2 class='mt-3'>Stories</h2>

<%= turbo_stream_from 'stories' %>
<%= turbo_frame_tag "stories" do %>
  <% if @stories.any? %>
    <%= render @stories %>
  <% else %>
    <p>No stories available</p>
  <% end %>
<% end %>
